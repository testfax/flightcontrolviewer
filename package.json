{
  "name": "flightcontrolviewer",
  "version": "1.0.0",
  "description": "Star Citizen Flight Control Viewer",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dist": "electron-builder -p always"
  },
  "repository": "https://github.com/testfax/flightcontrolviewer",
  "publish": {
    "provider": "github",
    "owner": "testfax",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.testfax.flightcontrolviewer",
    "productName": "Star Citizen Flight Control Viewer",
    "asar": false,
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage",
        "snap",
        "portable"
      ]
    },
    "files": [
      "**/*",
      "!**/.vscode/**",
      "!**/.gitignore/**"
    ]
  },
  "author": "Medi0cr3",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3"
  },
  "electronmon": {
    "watch": [
      "*"
    ],
    "ignore": [
      "node_modules/**/*"
    ]
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "colors": "^1.4.0",
    "dateformat": "^5.0.3",
    "electron-log": "^5.1.5",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.3.0",
    "fs": "^0.0.1-security",
    "json-colorizer": "^3.0.1",
    "lodash.throttle": "^4.1.1",
    "node-hid": "^3.1.0",
    "tail": "^2.2.6",
    "uuid": "^13.0.0",
    "xml2js": "^0.6.2"
  }
}
